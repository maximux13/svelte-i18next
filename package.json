{
  "name": "@maximux13/svelte-i18next",
  "description": "Add internationalization (i18n) support to your SvelteKit project",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maximux13/svelte-i18next.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "svelte",
    "i18n",
    "i18next",
    "kit"
  ],
  "author": {
    "name": "Andres Alarcon",
    "email": "maximux13@gmail.com",
    "url": "https://github.com/maximux13"
  },
  "bugs": {
    "url": "https://github.com/maximux13/svelte-i18next/issues"
  },
  "homepage": "https://github.com/maximux13/svelte-i18next#readme",
  "version": "2.0.0-beta.1",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "release": "pnpx np"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@sveltejs/kit": "^1.8.5",
    "i18next": "^22.4.10",
    "i18next-http-backend": "^2.1.1",
    "svelte": "^3.55.1 || ^4.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.25.0",
    "@sveltejs/package": "^2.2.2",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/svelte": "^4.0.3",
    "@types/accept-language-parser": "^1.5.3",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "2.36.0-next.2",
    "i18next": "^22.5.1",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-fs-backend": "^2.2.0",
    "i18next-http-backend": "^2.2.2",
    "jsdom": "^22.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.1.9",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.2",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vitest": "0.34.6"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "intl-parse-accept-language": "^1.0.0"
  },
  "np": {
    "testScript": "test:unit"
  },
  "publishConfig": {
    "access": "public"
  }
}
